<RadioButton
    Name="Self"
    x:Class="IsabelleApp.CustomUserControl.FormRadioButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IsabelleApp.CustomUserControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <RadioButton.Template>
        <ControlTemplate TargetType="RadioButton">
            <TextBlock Width="200" Height="200" Text="{Binding GText, ElementName=Self}" Tapped="TextBlock_Tapped"></TextBlock>
        </ControlTemplate>
    </RadioButton.Template>
</RadioButton>